<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#29B6F6</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#29B6F6</item>
        <!-- -->
        <item name="colorAccent">#29B6F6</item>
        <!-- changes color of the very most top bar like were you battery life and time is -->
        <item name="colorPrimaryDark">#29B6F6</item>
        <item name="android:navigationBarColor">#29B6F6</item>
        <item name="android:textColorHighlight">@color/app_name</item>
        <item name="android:textColorLink">@color/colorPrimary</item>


    </style>
    <style name="WhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>